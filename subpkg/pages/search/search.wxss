.search-box {
  position: sticky;
  top: 0;
  z-index: 999;
}

.sugg-list {
  padding: 0 5px;
}

.sugg-list .sugg-item{
  font-size: 12px;
  padding: 13px 0;
  border-bottom: 1px solid #efefef;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.sugg-list .sugg-item .goods-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 3px;
}

/* 外层容器 */
.history-box {
  padding: 0 5px;
}

/* 标题区域 */
.history-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 40px;
  font-size: 13px;
  border-bottom: 1px solid #efefef;
}

/* 列表区域 */
.history-list {
  display: flex;
  flex-wrap: wrap;
}

/* 标签样式（对应 uni-tag） */
.history-list .history-tag {
  margin-top: 5px;
  margin-right: 5px;
  padding: 4px 8px;
  background-color: #f8f8f8;
  border-radius: 15px;
  font-size: 12px;
  color: #666;
}